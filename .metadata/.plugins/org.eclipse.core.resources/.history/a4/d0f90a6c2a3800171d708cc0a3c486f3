<head>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script>
$(function(){
	
	$(".deletebutton").click(function(){
	       var row = $(this);
	       var row2=$(this).closest("tr");
	       $.ajax({
	           url: "DeleteFolder",
	           type: "POST",
	           data: {
	               "Id" : row.attr("id")
	           },
	           success: function(data)
	           {
	        	   row2.remove(); 
	           }
	       });
	   });
  
   $("#create").click(function(){
	   
      var nfolder = $("#nfolder").val();
      var pfolder = $("#pfolder").val();
      if( nfolder != "" && pfolder != "" )
          $.ajax({
              url: "NewFolder",
              type:"POST",
              data: {
                  "nfolder": nfolder,
                  "pfolder": pfolder
              },
              success: function(data)
              {
            	  	
            	    var row = $("<tr></tr>" );
            	    if(data.folder=="true")
            		 {
            		 	row.append('<td><a href="/HW7/SubFolder?Id='+data.id+'" style="text-decoration:none"><img border="0" alt="[*]" title="Toggle Public/Private" src="img/icons/closed_folder.png">'+data.name+'</a></td>')
            		 		.append('<td>'+data.date+'</td><td></td>')
            		 		.append('<td></td>');
            		 
            		 }
            	    else
            	    {
            	    	
            	    	
            	    }
            	   
                   
                   $("#tbody").append(row);
              },
       
          });
      return false;
   });
});
</script>
